
  <div data-search-target="list">
    <% if @tracks %>
        <% @tracks[0..4].each do |track| %>
        <div class="row align-items-center justify-content-center">
            <div class="d-flex size justify-content-center">
              <div class="col-lg-12 col-md-8 col-sm-4 ">
                <iframe style="border-radius:12px" src="https://open.spotify.com/embed/track/<%=track.id%>?utm_source=generator" width="100%" height="200" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
              </div>
              <%= simple_form_for [playlist, PlaylistSong.new] do |f|%>
                <%= hidden_field_tag :track_name, track.name %>
                <%= hidden_field_tag :track_id, track.id %>
                <%= hidden_field_tag :track_artists_first_name, track.artists.first.name %>
                <button type="submit" class="add ms-5">
                <i class="fa-solid fa-plus plus"></i>
                </button>
              <% end %>
            </div>
            </div>
        <% end %>
    <% end %>
  </div>

