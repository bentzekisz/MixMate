<div id="songCarousel" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @tracks.each_with_index do |track, index| %>
      <div class="carousel-item <%= 'active' if index.zero? %>">
        <!-- Your song card content goes here -->
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= track.name %></h5>
            <h5 class="card-title"><%= track.artists.first.name %></h5>
            <h5 class="card-title"><%= track.album.name %></h5>
            <%= image_tag track.album.images.first["url"] %>
            <!-- Add other song details as needed -->
          </div>
        </div>
      </div>
    <% end %>
  </div>


  <!-- Add navigation buttons -->
  <a class="carousel-control-prev" href="#songCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#songCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

