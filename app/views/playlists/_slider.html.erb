<div class="preview">
  <div class="container">

    <div id="songCarousel" class="carousel slide">
      <div class="carousel-inner">
        <% @playlist_songs.each_with_index do |playlist_song, index| %>
          <div class="carousel-item <%= 'active' if index.zero? %>">
            <div class="d-flex align-items-center justify-content-center mt-3 text-left">
              <div class ="text-left">
                <h1>Dear...</h1>
                <div class="card">
                  <div class="card-body" style="margin-bottom: 20px;">
                    <iframe style="border-radius:20px" src="https://open.spotify.com/embed/track/<%=playlist_song.song.spotify_track_id%>?utm_source=generator" width="100%" height="150" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
                      <div class="card-message" style="margin-bottom: 20px;">
                        <h4 class="card-text"><strong>a personal message for you:</strong></h4>
                        <p class="card-text"><%= playlist_song.message %></p>
                      </div>
                    <!-- You can add other song details as needed -->
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
      <div class="d-flex align-items-end justify-content-between mt-3">
        <button class="btn carousel-control-prev" type="button" data-bs-target="#songCarousel" data-bs-slide="prev" style="width: 30px; margin-left: 20px;">
          <i class="fa-solid fa-play fa-flip-horizontal"></i>
          <span class="fa-solid fa-play fa-flip-horizontal" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="btn carousel-control-next" type="button" data-bs-target="#songCarousel" data-bs-slide="next" style="width: 30px; margin-right: 20px;">
          <i class="fa-solid fa-play"></i>
          <span class="fa-solid fa-play" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const myCarousel = new bootstrap.Carousel(document.getElementById('songCarousel'), {
      interval: false // Set interval to false to disable automatic sliding
    });
  });
</script>
