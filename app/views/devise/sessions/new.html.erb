<div class="login-container">
  <div class="login-card">
    <h2 class="text-center">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, wrapper: false, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class: "form-control password-input" }, wrapper: false, label_html: { class: 'form-label' } %>

      <% if devise_mapping.rememberable? %>
  <div class="form-check">
    <%= f.check_box :remember_me, id: 'remember_me', class: 'form-check-input' %>
    <%= f.label :remember_me, class: 'form-check-label' do %>
      Remember me
    <% end %>
  </div>
<% end %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'login-btn' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
